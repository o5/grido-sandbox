common:
    php:
        date.timezone: Europe/Prague
        default_charset: UTF-8

    parameters:
        database:
            sqlite:
                driver: sqlite3
                file: %appDir%/models/users.s3db
                profiler: true
            mysql:
                driver: mysql
                host: localhost
                user: root
                password:
                database: grido-sandbox
                profiler: true
            postgre:
                driver: postgre
                host: localhost
                user: postgres
                password: root
                dbname: grido-sandbox
                profiler: true
        baseUri:

    nette:
        database:
            sqlite:
                dsn: 'sqlite:%database.sqlite.file%'
            mysql:
                dsn: 'mysql:host=%database.mysql.host%;dbname=%database.mysql.database%'
                user: %database.mysql.user%
                password: %database.mysql.password%
            postgre:
                dsn: 'pgsql:host=%database.postgre.host%;dbname=%database.postgre.dbname%'
                user: %database.postgre.user%
                password: %database.postgre.password%
        session:
            autoStart: yes

    services:
        sqlite: @nette.database.sqlite
        mysql: @nette.database.mysql
        postgre: @nette.database.postgre
        dibi: DibiConnection(%database.sqlite%)

    doctrine:
        connection: [driver: pdo_sqlite, path: %database.sqlite.file%]


production < common:
    parameters:
        baseUri: /example


development < common:
console < development:
